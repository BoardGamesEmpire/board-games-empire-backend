model EventMemberPermission {
  id String @id @default(cuid(2))

  event   Event  @relation(fields: [eventId], references: [id])
  eventId String @map("event_id")

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  permission Permission

  grantedBy   User   @relation("EventPermissionGranter", fields: [grantedById], references: [id])
  grantedById String @map("granted_by_id")

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)

  @@unique([eventId, userId, permission])
  @@map("event_member_permissions")
}
