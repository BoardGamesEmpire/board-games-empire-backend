model GameExpansionRuleVariant {
  id String @id @default(cuid(2))

  ruleVariant   RuleVariant @relation(fields: [ruleVariantId], references: [id], onDelete: Cascade)
  ruleVariantId String      @map("rule_variant_id")

  gameExpansion   GameExpansion @relation(fields: [gameExpansionId], references: [id], onDelete: Cascade)
  gameExpansionId String        @map("game_expansion_id")

  overrideCategory RuleCategory? @map("override_category")
  overrideRuleText String?       @map("override_rule_text")

  createdAt          DateTime          @default(now()) @map("created_at") @db.Timestamptz(3)
  ruleVariantUsage   RuleVariantUsage? @relation(fields: [ruleVariantUsageId], references: [id])
  ruleVariantUsageId String?

  @@unique([ruleVariantId, gameExpansionId])
  @@map("game_expansion_rule_variants")
}
